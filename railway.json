{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "npm run build"
  },
  "deploy": {
    "startCommand": "npm run prod",
    "healthcheckPath": "/",
    "healthcheckTimeout": 60,
    "restartPolicy": {
      "type": "always"
    }
  }
}
